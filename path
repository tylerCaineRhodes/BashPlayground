#! /bin/bash

OLD_IFS="$IFS"
IFS=":"

# Check if a directory is present with `-d directory`
if [ "$1" == "-d" ]; then
  directory="$2"
  for dir in $PATH;
  do
    if [ "$directory" == "$dir" -o "$directory" == "$dir/" ]; then
      echo "FOUND"
    fi
  done
  exit
fi

# Check if a command is present with '-c command'
if [ "$1" == "-c" ]; then
  command="$2"

  for dir in $PATH;
  do
    if [ -e "${dir}/${command}" ]; then
      echo "***COMMAND PRESENT IN PATH***"
      echo $dir/$command
    fi
  done
  exit
fi

# print path delimited by newline
for dir in $PATH;
do
  echo "$dir"
done

IFS="$OLD_IFS"
